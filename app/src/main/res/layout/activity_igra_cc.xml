<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/rijecCC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:textColor="@color/TitleBlack"
        android:textSize="50dp"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/bodoviCC"
        android:layout_marginTop="20dp"
        android:textAlignment="viewEnd"
        android:gravity="end"
        android:textSize="20dp"
        android:textColor="@color/TitleBlack"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GameOverCC"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:textColor="@color/TitleBlack"
        android:textSize="30dp"
        android:textAlignment="center"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/tocnoCC"
        android:src="@drawable/correct_button"
        android:background="@drawable/answer_buttons"
        android:layout_alignTop="@+id/netocnoCC"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/netocnoCC"
        android:src="@drawable/wrong_button"
        android:background="@drawable/answer_buttons"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/pocetakCC"
        android:text="Početna stranica"
        android:onClick="IdiNaPocetak"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/izlazCC"
        android:text="Izlaz"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="Ponovi igru"
        android:id="@+id/ponovnoCC"
        android:onClick="PonoviIgru"
        android:layout_alignTop="@+id/pocetakCC"
        android:layout_centerHorizontal="true" />

</RelativeLayout>